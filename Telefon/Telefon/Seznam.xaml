<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Telefon.Seznam">
    <ContentPage.Content>
    </ContentPage.Content>
    <ScrollView>
        <StackLayout Orientation="Vertical" >
            <ListView x:Name="list" SeparatorColor="#2c7da0" RowHeight="85" ItemTapped="KontaktTap">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell  Text="{Binding Text}" ImageSource="{Binding Image}" TextColor="Black" DetailColor="Black" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ScrollView>
</ContentPage>