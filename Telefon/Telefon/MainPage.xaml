<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions"
             xmlns:local="clr-namespace:Telefon"
             x:Class="Telefon.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Rýgr je gay!" x:Name="myText" VerticalOptions="Center" HorizontalOptions="Center" />
            
            
            <ContentView>
                
            </ContentView>
            
        </StackLayout>
        
    </ContentPage.Content>
    <RelativeLayout>

        
        
        <Image Source="arrownew.png" HeightRequest="50" WidthRequest="50" HorizontalOptions="Start" Margin="15"
               RelativeLayout.XConstraint =
              "{ConstraintExpression Type=RelativeToParent,
                                     Property=Width,
                                     Factor=0.5,
                                     Constant=-190}"
            RelativeLayout.YConstraint =
              "{ConstraintExpression Type=RelativeToParent,
                                     Property=Height,
                                     Factor=0.5,
                                     Constant=-315}"/>
        <Image Source="dots.png" HeightRequest="40" WidthRequest="50" HorizontalOptions="Start" Margin="15"
               RelativeLayout.XConstraint =
              "{ConstraintExpression Type=RelativeToParent,
                                     Property=Width,
                                     Factor=0.5,
                                     Constant=120}"
            RelativeLayout.YConstraint =
              "{ConstraintExpression Type=RelativeToParent,
                                     Property=Height,
                                     Factor=0.5,
                                     Constant=-310}"/>
        <controls:CircleImage Source="logic.png" WidthRequest="150" HeightRequest="150" Aspect="AspectFit" 
                              RelativeLayout.XConstraint =
                                  "{ConstraintExpression Type=RelativeToParent,
                                                         Property=Width,
                                                         Factor=0.5,
                                                         Constant=-75}"
                                RelativeLayout.YConstraint =
                                  "{ConstraintExpression Type=RelativeToParent,
                                                         Property=Height,
                                                         Factor=0.5,
                                                         Constant=-230}"
        ></controls:CircleImage>
        <Label Text="Jakub Vlček" x:Name="myText2" VerticalOptions="Center" HorizontalOptions="Start" FontSize="30" TextColor="Black"
               RelativeLayout.XConstraint =
              "{ConstraintExpression Type=RelativeToParent,
                                     Property=Width,
                                     Factor=0.5,
                                     Constant=-75}"
            RelativeLayout.YConstraint =
              "{ConstraintExpression Type=RelativeToParent,
                                     Property=Height,
                                     Factor=0.5,
                                     Constant=-70}"/>

    </RelativeLayout>

</ContentPage>